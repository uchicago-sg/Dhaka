= form_for @category do |f|
  = render 'shared/form_errors', :resource => @category
  .form-group
    = f.label :description
    = f.text_field :description, class: "form-control"
  .form-groupp
    = f.label :details
    = f.text_area :details, class: "form-control"
  %br
  = f.submit "Submit", :class => "btn btn-primary"