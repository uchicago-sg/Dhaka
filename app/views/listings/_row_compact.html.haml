.row.listing{:id => listing.permalink, :class => classes.join(' '), :style => "text-align: center;"}
  .col-md-3
    .thumbnail
      -listing.images.map do |image|
        =image_tag image.photo.url
        -break
      .caption
        %h3{:style => "text-align: center;"}= listing.description
        %p{:style => "text-align: center;"}= listing.price.zero? ? 'Free' : number_to_currency(listing.price)
        = link_to 'Show', listing,{ class: "btn btn-link"}