- title 'Change your password'
- content_for :top do
  %h2 Change your password
= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put } do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  %span.field
    %span= f.label :password, "New password"
    %span.input= f.password_field :password
  %span.field
    %span= f.label :password_confirmation, "Confirm new password"
    %span.input= f.password_field :password_confirmation
  %span.submit= f.submit "Change my password", :class => "button"
= render :partial => "devise/shared/links"